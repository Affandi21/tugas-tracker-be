generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MataKuliah {
  id        String   @id @default(uuid())
  nama      String
  deskripsi String?
  sks       Int      @default(3)
  tugas     Tugas[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tugas {
  id           String     @id @default(uuid())
  nama         String
  deskripsi    String?
  deadline     DateTime?
  status       String     @default("BELUM_DIKERJAKAN")
  mataKuliahId String
  mataKuliah   MataKuliah @relation(fields: [mataKuliahId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

